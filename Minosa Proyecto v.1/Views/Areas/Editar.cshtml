@model Area

<div class="container p-3 mb-5" style="width: 400px;">
    <h2 class="text-center">Editar Área</h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="ID_area" />

        <div class="form-group">
            <label asp-for="Nombre_Area"></label>
            <input asp-for="Nombre_Area" class="form-control" />
            <span asp-validation-for="Nombre_Area" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="id_zona">Zona</label>
            <select asp-for="id_zona" class="form-control" asp-items="ViewBag.Zonas"></select>
            <span asp-validation-for="id_zona" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary m-2">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary m-2">Cancelar</a>
        </div>
    </form>
</div>
