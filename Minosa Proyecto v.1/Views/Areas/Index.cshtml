@model IEnumerable<Area>

<div class="text-center">
    <h1 class="text-center">Lista de Áreas</h1>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>
<a asp-action="Crear" class="btn btn-primary">Crear Nueva Área</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary">Cancelar</a>

<table class="table" id="areasTable">
    <thead>
        <tr>
            <th>Nombre del Área</th>
            <th>Zona</th>
            <th>Activa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var area in Model)
        {
            <tr>
                <td>@area.Nombre_Area</td>
                <td>@area.Nombre_Zona</td>
                <td data-activo="@(area.Activo)">
                    @if (area.Activo)
                    {
                        <span class="text-success"><i class="bi bi-check-circle-fill"></i></span>
                    }
                    else
                    {
                        <span class="text-danger"><i class="bi bi-x-circle-fill"></i></span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@area.ID_area" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@area.ID_area" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        document.getElementById('exportButton').addEventListener('click', function () {
            // Clonar la tabla para evitar modificar el DOM original
            let table = document.getElementById('areasTable').cloneNode(true);

            // Reemplazar los iconos de "Activo" por valores de texto
            let rows = table.querySelectorAll('tbody tr');
            rows.forEach(row => {
                let activoCell = row.querySelector('td[data-activo]');
                if (activoCell) {
                    let activoValue = activoCell.getAttribute('data-activo') === "True" ? "Sí" : "No";
                    activoCell.textContent = activoValue;
                }
            });

            // Convertir la tabla clonada a una hoja de cálculo
            let workbook = XLSX.utils.table_to_book(table, { sheet: "Areas" });

            // Exportar el archivo
            XLSX.writeFile(workbook, "Areas.xlsx");
        });
    </script>
