@using Newtonsoft.Json
@model List<Minosa_Proyecto_v._1.Models.Predicciones>

<div class="container mt-4">
    <h2 class="text-center">Resultados de la Predicción</h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            <div class="col-md-6">
                <table class="table table-striped table-bordered table-responsive text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Hora</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prediccion in Model)
                        {
                            <tr>
                                <td>@prediccion.hora</td>
                                <td>
                                    @if (prediccion.Estado == "Activo")
                                    {
                                        <span class="text-success"><img src="~/icons/arrow-trend-up-solid.svg" style="width: 16px; height: 16px;"></span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><img src="~/icons/arrow-trend-down-solid.svg" style="width: 16px; height: 16px;"></span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <div id="chart-container" style="height: 400px;"></div>
            </div>
        </div>
    }
    else
    {
        <p class="alert alert-warning text-center">No se encontraron predicciones.</p>
    }
</div>
@* script para generar el grafico *@
@section Scripts {
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const data = @Html.Raw(JsonConvert.SerializeObject(Model.Select(m => new { Hora = m.hora, Estado = m.Estado == "Activo" ? 1 : 0 })));

            Highcharts.chart('chart-container', {
                chart: {
                    type: 'line'
                },
                title: {
                    text: 'Predicciones del Estado'
                },
                xAxis: {
                    categories: data.map(d => d.Hora),
                    title: {
                        text: 'Hora'
                    }
                },
                yAxis: {
                    title: {
                        text: 'Estado'
                    },
                    labels: {
                        formatter: function () {
                            return this.value === 1 ? 'Activo' : 'Inactivo';
                        }
                    },
                    tickInterval: 1,
                    min: 0,
                    max: 1
                },
                series: [{
                    name: 'Estado',
                    data: data.map(d => d.Estado),
                    step: 'left',
                    marker: {
                        enabled: true
                    }
                }],
                tooltip: {
                    formatter: function () {
                        return `<b>${this.x}</b><br>Estado: ${this.y === 1 ? 'Activo' : 'Inactivo'}`;
                    }
                }
            });
        });
    </script>
}
