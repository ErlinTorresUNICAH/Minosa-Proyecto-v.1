@model IEnumerable<Marca>

<div class="text-center">
    <h1 class="text-center">Lista de Marcas</h1>
    <button id="exportButton" class="btn btn-success m-2">
        <img src="~/icons/file-excel-regular.svg" style="width: 16px; height: 16px;"> Exportar a Excel
    </button>
</div>
<a asp-action="Crear" class="btn btn-primary m-2">Crear Nueva Marca</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary m-2">Cancelar</a>

<table class="table table-bordered" id="marcasTable">
    <thead class="table-dark">
        <tr>
            <th>Nombre de la Marca</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marca in Model)
        {
            <tr>
                <td>@marca.NombreMarca</td>
                <td data-activo="@marca.Activa">
                    @if (marca.Activa)
                    {
                        <span class="text-success">
                            <img src="~/icons/check-solid.svg" style="width: 16px; height: 16px;">
                        </span>
                    }
                    else
                    {
                        <span class="text-danger">
                            <img src="~/icons/ban-solid.svg" style="width: 16px; height: 16px;">
                        </span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@marca.ID_marca" class="btn btn-warning btn-sm">
                        <img src="~/icons/pencil-square.svg" style="width: 16px; height: 16px;">
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@marca.ID_marca" class="btn btn-danger btn-sm">
                        <img src="~/icons/trash-can-regular.svg" style="width: 16px; height: 16px;">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById('exportButton').addEventListener('click', function () {
        // Clonar la tabla para evitar modificar el DOM original
        let table = document.getElementById('marcasTable').cloneNode(true);

        // Reemplazar los iconos de "Activo" por valores de texto
        let rows = table.querySelectorAll('tbody tr');
        rows.forEach(row => {
            let activoCell = row.querySelector('td[data-activo]');
            if (activoCell) {
                let activoValue = activoCell.getAttribute('data-activo') === "True" ? "Sí" : "No";
                activoCell.textContent = activoValue;
            }
        });

        // Convertir la tabla clonada a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Marcas" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Marcas.xlsx");
    });
</script>
