@model IEnumerable<Marca>

<h2>Lista de Marcas</h2>

<a asp-action="Crear" class="btn btn-primary">Crear Nueva Marca</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary">Cancelar</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre de la Marca</th>
            <th>Activa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marca in Model)
        {
            <tr>
                <td>@marca.NombreMarca</td>
                <td>
                    @if (marca.Activa)
                    {
                        <span class="text-success"><i class="bi bi-check-circle-fill"></i></span>
                    }
                    else
                    {
                        <span class="text-danger"><i class="bi bi-x-circle-fill"></i></span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@marca.ID_marca" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@marca.ID_marca" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
