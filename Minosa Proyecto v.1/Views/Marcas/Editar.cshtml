@model Marca

<form asp-action="Editar">
    <input type="hidden" asp-for="ID_marca" />
    <div class="form-group">
        <label asp-for="NombreMarca" class="control-label"></label>
        <input asp-for="NombreMarca" class="form-control" />
        <span asp-validation-for="NombreMarca" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Activa" class="form-check-input" type="checkbox" />
        <label asp-for="Activa" class="form-check-label"></label>
        <span asp-validation-for="Activa" class="text-danger"></span>
    </div>
    <input type="submit" value="Guardar" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
