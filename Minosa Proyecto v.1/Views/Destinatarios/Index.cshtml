@model IEnumerable<Destinatario>

<h2 class="text-center">Lista de Destinatarios</h2>



<table class="table table-bordered  ">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Descripción</th>
            <th>Alerta</th>
            @* <th>Acciones</th> *@
            <th>
                <a asp-action="Crear" class="btn btn-success"><i class="bi bi-envelope-plus"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var destinatario in Model)
        {
            <tr class="">
                <td>@destinatario.Nombre_Destinatario</td>
                <td>@destinatario.Correo_Destinatario</td>
                <td>@destinatario.Descripcion_Destinatario</td>
                <td>@destinatario.Nombre_Alerta</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@destinatario.ID_destinatario" class="btn btn-warning"><i class="bi bi-pen"></i></a>
                    <a asp-action="Eliminar" asp-route-id="@destinatario.ID_destinatario" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
