@model Destinatario

<h2>Crear Destinatario</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Nombre_Destinatario"></label>
        <input asp-for="Nombre_Destinatario" class="form-control" placeholder="Ingrese el nombre" />
    </div>
    <div class="form-group">
        <label asp-for="Correo_Destinatario"></label>
        <input asp-for="Correo_Destinatario" type="email" class="form-control" placeholder="Ingrese el correo" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion_Destinatario"></label>
        <input asp-for="Descripcion_Destinatario" class="form-control" placeholder="Ingrese una descripción" />
    </div>
    <div class="form-group">
        <label asp-for="id_alerta">Alerta</label>
        <select asp-for="id_alerta" class="form-control" asp-items="ViewBag.Alertas"></select>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
