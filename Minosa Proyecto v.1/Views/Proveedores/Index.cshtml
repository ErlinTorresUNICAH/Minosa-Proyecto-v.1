@model List<Proveedor>

<div class="text-center">
    <h2 class="text-center">Proveedores</h2>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>
<a asp-action="Crear" class="btn btn-primary">Nuevo Proveedor</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary">Cancelar</a>
<table class="table" id="provedoresTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proveedor in Model)
        {
            <tr>
                <td>@proveedor.ID_proveedor</td>
                <td>@proveedor.Nombre</td>
                <td>@proveedor.Direccion</td>
                <td>@proveedor.Telefono</td>
                <td>@proveedor.Correo</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@proveedor.ID_proveedor">Editar</a> 
                    <a asp-action="Eliminar" asp-route-id="@proveedor.ID_proveedor">Eliminar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script>
        document.getElementById('exportButton').addEventListener('click', function () {
        // Obtener la tabla HTML
        let table = document.getElementById('provedoresTable');

        // Convertir tabla HTML a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Provedores" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Provedores.xlsx");
    });

</script>

