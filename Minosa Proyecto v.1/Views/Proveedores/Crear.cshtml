@model Proveedor

<div class="container p-3 mb-5" style="width: 400px;">
    <h2 class="text-center">Nuevo Proveedor</h2>

    <form asp-action="Crear" method="post">
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Correo"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary m-2">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary m-2">Cancelar</a>
        </div>
    </form>
</div>
