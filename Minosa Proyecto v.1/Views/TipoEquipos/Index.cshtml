@model IEnumerable<TipoEquipo>

<h2>Tipos de Equipos</h2>

<a asp-action="Crear" class="btn btn-primary">Nuevo Tipo de Equipo</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary">Cancelar</a>
<table>
    <tr>
        <th>ID</th>
        <th>Tipo de Equipo</th>
        <th>Fecha de Creación</th>
        <th>Acciones</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID_tipo_equipo</td>
            <td>@item.Tipo_Equipo</td>
            <td>@item.Creacion_Tipo_Equipo</td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.ID_tipo_equipo">Editar</a> |
                <a asp-action="Eliminar" asp-route-id="@item.ID_tipo_equipo">Eliminar</a>
            </td>
        </tr>
    }
</table>

