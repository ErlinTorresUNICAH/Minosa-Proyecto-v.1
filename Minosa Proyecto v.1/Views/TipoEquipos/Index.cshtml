@model IEnumerable<TipoEquipo>

<div class="text-center">
    <h2 class="text-center">Tipos de Equipos</h2>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>
<a asp-action="Crear" class="btn btn-outline-success"><i class="bi bi-cloud-plus"></i> Nuevo Tipo de Equipo</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-outline-secondary">Cancelar</a>

<table class="table" id="tipoEquiposTable">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tipo de Equipo</th>
            <th>Fecha de Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID_tipo_equipo</td>
                <td>@item.Tipo_Equipo</td>
                <td>@item.Creacion_Tipo_Equipo</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.ID_tipo_equipo" class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i> Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.ID_tipo_equipo" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script>
        document.getElementById('exportButton').addEventListener('click', function () {
        // Obtener la tabla HTML
        let table = document.getElementById('tipoEquiposTable');

        // Convertir tabla HTML a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "TiposDeEquipos" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "TiposDeEquipos.xlsx");
    });

</script>
