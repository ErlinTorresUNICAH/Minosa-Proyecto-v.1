@model DireccionIp

<div class="container p-4 mb-5" style="max-width: 500px;">
    <h2 class="text-center text-danger mb-4">Eliminar Dirección IP</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Error
        </div>
    }

    <div class="mb-3 text-center">
        <p><strong>IPV4:</strong> @Model.IPV4</p>
        <p><strong>Estado:</strong> @Model.Estado</p>
        <p><strong>VLAN:</strong> @Model.Nombre_Vlan</p>
    </div>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="ID_ip" />

        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger px-4">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
        </div>
    </form>
</div>
