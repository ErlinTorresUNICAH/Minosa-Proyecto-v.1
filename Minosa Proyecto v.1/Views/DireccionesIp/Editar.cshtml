@model DireccionIp

<h2>Editar Dirección IP</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="ID_ip" />

    <div class="form-group">
        <label asp-for="IPV4"  ></label>
        <input asp-for="IPV4" class="form-control" readonly />
        <span asp-validation-for="IPV4" class="text-danger" ></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_vlan">VLAN</label>
        <select asp-for="id_vlan" class="form-control" asp-items="ViewBag.Vlans"  ></select>
        <span asp-validation-for="id_vlan" class="text-danger" ></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Activa" class="form-check-input" type="checkbox" />
        <label asp-for="Activa" class="form-check-label"></label>
        <span asp-validation-for="Activa" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
