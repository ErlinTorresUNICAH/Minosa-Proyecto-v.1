@model Material

<h2>Eliminar Material</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="ID_Material" />

    <div class="form-group">
        <label>Descripción:</label>
        <input asp-for="Descripcion" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Cantidad:</label>
        <input asp-for="Cantidad" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Área:</label>
        <input asp-for="Nombre_Area" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
