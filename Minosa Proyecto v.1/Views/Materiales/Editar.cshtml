@model Material

<h2>Editar Material</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="ID_Material" />

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_area">Área</label>
        <select asp-for="id_area" class="form-control" asp-items="ViewBag.Areas"></select>
        <span asp-validation-for="id_area" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-triangle-exclamation"></i> Cancelar</a>
</form>
