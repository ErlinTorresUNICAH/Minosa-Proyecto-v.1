@model IEnumerable<Material>

<div class="text-center">
    <h2 class="text-center">Lista de Materiales</h2>
    <button id="exportButton" class="btn btn-success m-2">
        <img src="~/icons/file-excel-regular.svg" style="width: 16px; height: 16px;"> Exportar a Excel
    </button>
</div>
<a asp-action="Crear" class="btn btn-primary m-2">Crear Nuevo Material</a>

<a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary m-2">Cancelar</a>

<table class="table table-bordered" id="materialesTable">
    <thead class="table-dark">
        <tr>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Área</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.Descripcion</td>
                <td>@material.Cantidad</td>
                <td>@material.Nombre_Area</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@material.ID_Material" class="btn btn-warning btn-sm">
                        <img src="~/icons/pencil-square.svg" style="width: 16px; height: 16px;">
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@material.ID_Material" class="btn btn-danger btn-sm">
                        <img src="~/icons/trash-can-regular.svg" style="width: 16px; height: 16px;">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById('exportButton').addEventListener('click', function () {
        // Obtener la tabla HTML
        let table = document.getElementById('materialesTable');

        // Convertir tabla HTML a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Materiales" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Materiales.xlsx");
    });
</script>
