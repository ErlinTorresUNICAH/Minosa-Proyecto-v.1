@model IEnumerable<Material>


<div class="text-center">
    <h2 class="text-center">Lista de Materiales</h2>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>
<a asp-action="Crear" class="btn btn-primary">Crear Nuevo Material</a>

<a asp-action="Index" asp-controller="Equipos" class="btn btn-outline-secondary"><i class="fa-solid fa-triangle-exclamation"></i> Cancelar</a>

<table class="table" id="materialesTable">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Área</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.Descripcion</td>
                <td>@material.Cantidad</td>
                <td>@material.Nombre_Area</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@material.ID_Material">Editar</a> |
                    <a asp-action="Eliminar" asp-route-id="@material.ID_Material">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script>
        document.getElementById('exportButton').addEventListener('click', function () {
        // Obtener la tabla HTML
        let table = document.getElementById('materialesTable');

        // Convertir tabla HTML a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Materiales" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Materiales.xlsx");
    });

</script>