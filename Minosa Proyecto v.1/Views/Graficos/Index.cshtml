@model List<dynamic>

<h2>Equipos por Tipo</h2>

<div id="equipmentChartContainer" style="width:100%; height:400px;"></div>

<script src="https://code.highcharts.com/highcharts.js"></script>
<script>
    // Prepare the data for the pie chart
    var data = [];

    @foreach (var item in Model)
    {
        <text>
                data.push(['@item.TipoEquipo', @item.Cantidad]);
        </text>
    }

        // Initialize the Highcharts pie chart
        Highcharts.chart('equipmentChartContainer', {
            chart: {
                type: 'pie'
            },
            title: {
                text: 'Cantidad de Equipos por Tipo'
            },
            series: [{
                name: 'Cantidad',
                colorByPoint: true,
                data: data
            }],
            tooltip: {
                pointFormat: '{series.name}: <b>{point.y}</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>'
                    }
                }
            }
        });
            // : { point.y }
</script>
