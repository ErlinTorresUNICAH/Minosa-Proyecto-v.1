<style>
    body {
        margin: 0;
        padding: 0;
        background: black;
        color: white;
        font-family: 'Arial', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden;
    }

    .access-denied {
        text-align: center;
        animation: pulse 1.5s infinite;
    }

        .access-denied h1 {
            font-size: 3rem;
            color: red;
            text-shadow: 0 0 10px red, 0 0 20px darkred, 0 0 30px crimson;
            animation: flicker 2s infinite alternate;
        }

        .access-denied p {
            font-size: 1.2rem;
            margin-top: 20px;
        }

    .glitch {
        font-size: 2.5rem;
        font-weight: bold;
        color: red;
        position: relative;
        display: inline-block;
        text-transform: uppercase;
        animation: glitch 1s infinite;
    }

        .glitch::before,
        .glitch::after {
            content: attr(data-text);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: black;
            overflow: hidden;
        }

        .glitch::before {
            left: -2px;
            text-shadow: -2px 0 red;
            clip: rect(2px, 90%, 0, 0);
            animation: glitch-before 1.5s infinite;
        }

        .glitch::after {
            left: 2px;
            text-shadow: 2px 0 blue;
            clip: rect(10%, 20%, 30%, 40%);
            animation: glitch-after 1.5s infinite;
        }

    /* Animations */
    @@keyframes glitch {
        0%

    {
        transform: translate(0);
    }

    20% {
        transform: translate(-2px, 2px);
    }

    40% {
        transform: translate(2px, -2px);
    }

    60% {
        transform: translate(-2px, -2px);
    }

    80% {
        transform: translate(2px, 2px);
    }

    100% {
        transform: translate(0);
    }

    }

    @@keyframes glitch-before {
        0%

    {
        clip: rect(10px, 150px, 30px, 0);
    }

    50% {
        clip: rect(0px, 150px, 10px, 0);
    }

    100% {
        clip: rect(20px, 150px, 10px, 0);
    }

    }

    @@keyframes glitch-after {
        0%

    {
        clip: rect(30px, 150px, 50px, 0);
    }

    50% {
        clip: rect(10px, 150px, 30px, 0);
    }

    100% {
        clip: rect(40px, 150px, 60px, 0);
    }

    }

    @@keyframes flicker {
        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100%

    {
        opacity: 1;
    }

    20%, 24%, 55% {
        opacity: 0.4;
    }

    }

    @@keyframes pulse {
        0%

    {
        text-shadow: 0 0 10px red, 0 0 20px darkred, 0 0 30px crimson;
    }

    50% {
        text-shadow: 0 0 20px red, 0 0 30px darkred, 0 0 40px crimson;
    }

    100% {
        text-shadow: 0 0 10px red, 0 0 20px darkred, 0 0 30px crimson;
    }

    }
</style>