@model IEnumerable<Usuario>

<h2>Lista de Usuarios</h2>

<a asp-action="Crear" class="btn btn-primary">Crear Nuevo Usuario</a>

<table class="table">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre_Usuario</td>
                <td>@usuario.Nombre_Rol</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@usuario.ID_usuario" class="btn btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@usuario.ID_usuario" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
