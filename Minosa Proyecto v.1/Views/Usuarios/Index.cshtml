@model IEnumerable<Usuario>

<h2 class="text-center">Lista de Usuarios</h2>



<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th><a asp-action="Crear" class="btn btn-success btn-sm">Nuevo Usuario</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre_Usuario</td>
                <td>@usuario.Nombre_Rol</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@usuario.ID_usuario" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@usuario.ID_usuario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
