@model IEnumerable<Usuario>
<div class="text-center">
    <h2 class="text-center">Lista de Usuarios</h2>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>
<div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <table class="table table-bordered" id="usuariosTable">
    <thead class="table-dark">
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th><a asp-action="Crear" class="btn btn-success"><img src="~/icons/square-plus-regular.svg" style="width: 16px; height: 16px;"></a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre_Usuario</td>
                <td>@usuario.Nombre_Rol</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@usuario.ID_usuario" class="btn btn-warning"><img src="~/icons/pencil-square.svg" style="width: 16px; height: 16px;"></a>
                    <a asp-action="Eliminar" asp-route-id="@usuario.ID_usuario" class="btn btn-danger"><img src="~/icons/delete-left-solid.svg" style="width: 16px; height: 16px;"></a>

            
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
@* script para exportar a excel *@
<script>
        document.getElementById('exportButton').addEventListener('click', function () {
        // Obtener la tabla HTML
        let table = document.getElementById('usuariosTable');

        // Convertir tabla HTML a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Usuarios" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Usuarios.xlsx");
    });

</script>
