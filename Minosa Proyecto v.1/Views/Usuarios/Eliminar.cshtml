@model Usuario


<div class="text-center">
    <h2>Eliminar Usuario</h2>
    <p>¿Está seguro que desea eliminar el siguiente usuario?</p>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Error
        </div>
    }
</div>

<div class="container" style="max-width: 500px;">
    <div class="form-group">
        <label>Usuario:</label>
        <input asp-for="Nombre_Usuario" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Rol:</label>
        <input asp-for="Nombre_Rol" class="form-control" readonly />
    </div>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="ID_usuario" />
        <button type="submit" class="btn btn-danger m-2">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary m-2">Cancelar</a>
    </form>

</div>

