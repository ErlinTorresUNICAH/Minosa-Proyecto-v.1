@model Minosa_Proyecto_v._1.Models.EquipoDetalleViewModel

<form asp-action="Crear" method="post" class="container text-start mt-2 needs-validation" novalidate >
            <div class="container text-center m-2">
                <h2>Agregar Nuevo Equipo</h2>
                <button type="submit" class="btn btn-success">Guardar Equipo</button>
                <a asp-controller="Equipos" asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-triangle-exclamation"></i> Cancelar
                </a>
            </div>

            
    <div class="container shadow-lg p-3 mb-5 bg-body-tertiary rounded p-4 card">
        <div class="card-header bg-primary text-white m-2">
            <h3><i class="fas fa-info-circle"></i> Datos Básicos del Equipo</h3>
        </div>
        
        <div class="row">
            <div class="form-group col-1">
                <div class="form-check mt-4">
                    <input type="checkbox" asp-for="Activo" class="form-check-input" id="Activo" />
                    <label class="form-check-label" for="Activo">Activo</label>
                </div>
               
            </div>


            <div class="form-group col-5">
                <label for="ID_tipo_equipo">Tipo de Equipo</label>
                <div class="input-group" >
                    <span class="input-group-text"><a asp-controller="TipoEquipos" asp-action="Index" class="btn btn-secondary"><img src="~/icons/computer-solid.svg" style="width: 16px; height: 16px;"></a></span>
                    <select asp-for="ID_tipo_equipo" asp-items="Model.TiposEquipos" class="form-control"></select>
                </div>
            </div>
           
    
            <div class="form-group col-6">
                <label for="ID_proveedor">Proveedor</label>
                <div class="input-group">
                    <span class="input-group-text"><a asp-controller="Proveedores" asp-action="Index" class="btn btn-secondary w-100"><img src="~/icons/truck-fast-solid.svg" style="width: 16px; height: 16px;"></a></span>
                    <select asp-for="ID_proveedor" asp-items="Model.Proveedores" class="form-control"></select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="ID_modelo">Modelo</label>
                <div class="input-group">
                    <span class="input-group-text"><a asp-controller="Modelos" asp-action="Index" class="btn btn-secondary w-100"><img src="~/icons/clone-regular.svg" style="width: 16px; height: 16px;"></a></span>
                    <select asp-for="ID_modelo" asp-items="Model.Modelos" class="form-control"></select>
                </div>
            </div>
            <div class="form-group col">
                <label for="ID_area">Área</label>
                <div class="input-group">
                    <span class="input-group-text"><a asp-controller="Areas" asp-action="Index" class="btn btn-secondary w-100"><img src="~/icons/school-solid.svg" style="width: 16px; height: 16px;"></a></span>
                    <select asp-for="ID_area" asp-items="Model.Areas" class="form-control"></select>
                </div>
            </div>
        </div>
        <div class="row"> 
            <div class="form-group col">
                <label for="ID_ip">Dirección IP</label>
                <div class="input-group">
                    <span class="input-group-text"><a asp-controller="DireccionesIp" asp-action="Index" class="btn btn-secondary w-100"><img src="~/icons/qrcode-solid.svg" style="width: 16px; height: 16px;"></a></span>
                    <select asp-for="ID_ip" asp-items="Model.IPs" class="form-control"></select>
                </div>
            </div>

            <div class="form-group col">
                <label for="NumeroSerie">Número de Serie</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-barcode"></i></span>
                    <input type="text" asp-for="NumeroSerie" class="form-control" required />
                </div>
                <span asp-validation-for="NumeroSerie" class="text-danger"></span>
            </div>
            </div>
        <div class="row">
            <div class="form-group col">
                <label for="Descripcion">Descripción</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                    <input type="text" asp-for="Descripcion" class="form-control" required />
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            
            <div class="form-group col">
                <label for="Estado">Estado</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-thermometer-half"></i></span>
                    <input type="text" asp-for="Estado" class="form-control" />
                </div>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            </div>
        <div class="row">

                <div class="form-group col">
                    <label for="Respaldo">Respaldo</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-cloud-upload-alt"></i></span>
                        <textarea asp-for="Respaldo" class="form-control"></textarea>
                    </div>
                    <span asp-validation-for="Respaldo" class="text-danger"></span>
                </div>
                

                <div class="form-group col">
                    <label for="Observaciones">Observaciones</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-comment-dots"></i></span>
                        <textarea asp-for="Observaciones" class="form-control"></textarea>
                    </div>
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>
            
            </div>
    </div>
    <div class="container shadow-lg p-3 mb-5 bg-body-tertiary rounded p-4 card">
        <div class="card-header bg-secondary text-white m-2">
            <h3><i class="fas fa-tools"></i> Detalles Técnicos</h3>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="Tipo_Voltaje">Tipo de Voltaje</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-bolt"></i></span>
                    <input type="text" asp-for="Tipo_Voltaje" class="form-control" />
                </div>
                <span asp-validation-for="Tipo_Voltaje" class="text-danger"></span>
            </div>

            <div class="form-group col">
                <label for="Voltaje">Voltaje</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tachometer-alt"></i></span>
                    <input type="number" asp-for="Voltaje" class="form-control" />
                </div>
                <span asp-validation-for="Voltaje" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="Amperaje">Amperaje</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-battery-three-quarters"></i></span>
                    <input type="number" asp-for="Amperaje" class="form-control" />
                </div>
                <span asp-validation-for="Amperaje" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label for="Voltaje_Energia">Voltaje de Energía</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-bolt"></i></span>
                    <input type="text" asp-for="Voltaje_Energia" class="form-control" />
                </div>
                <span asp-validation-for="Voltaje_Energia" class="text-danger"></span>
            </div>
            
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="Num_Puertos_SFP">Número de Puertos SFP</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-link"></i></span>
                    <input type="number" asp-for="Num_Puertos_SFP" class="form-control" />
                </div>
                <span asp-validation-for="Num_Puertos_SFP" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label for="Num_Puertos_RJ45">Número de Puertos RJ45</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-plug"></i></span>
                    <input type="number" asp-for="Num_Puertos_RJ45" class="form-control" />
                </div>
                <span asp-validation-for="Num_Puertos_RJ45" class="text-danger"></span>
            </div>
            
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="Fecha_Garantia">Fecha de Garantía</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-check"></i></span>
                    <input type="date" asp-for="Fecha_Garantia" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <span asp-validation-for="Fecha_Garantia" class="text-danger"></span>
            </div>

            
            <div class="form-group col">
                <label for="Fecha_Compra">Fecha de Compra</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    <input type="date" asp-for="Fecha_Compra" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <span asp-validation-for="Fecha_Compra" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            
            <div class="form-group col">
                <label for="Tipo_Garantia">Tipo de Garantía</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                    <input type="text" asp-for="Tipo_Garantia" class="form-control" />
                </div>
                <span asp-validation-for="Tipo_Garantia" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label for="Firmware">Firmware</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-microchip"></i></span>
                    <input type="text" asp-for="Firmware" class="form-control" />
                </div>
                <span asp-validation-for="Firmware" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="Usuario">Usuario</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" asp-for="Usuario" class="form-control" />
                </div>
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group col">
                <label for="Contracena">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                    <input type="text" asp-for="Contracena" class="form-control" />
                </div>
                <span asp-validation-for="Contracena" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            
            <div class="form-group col">
                <label for="Ultima_Actualizacion">Última Actualización</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-sync"></i></span>
                    <input type="date" asp-for="Ultima_Actualizacion" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <span asp-validation-for="Ultima_Actualizacion" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label for="Fecha_Instalacion">Fecha de Instalación</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-wrench"></i></span>
                    <input type="date" asp-for="Fecha_Instalacion" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <span asp-validation-for="Fecha_Instalacion" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="MAC_Address">MAC Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                    <input type="text" asp-for="MAC_Address" class="form-control" />
                </div>
                <span asp-validation-for="MAC_Address" class="text-danger"></span>
            </div>
            
            <div class="form-group col">
                <label for="Canal">Canal</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-wifi"></i></span>
                    <input type="text" asp-for="Canal" class="form-control" value="N/A" />
                </div>
                <span asp-validation-for="Canal" class="text-danger"></span>
            </div>
            
        </div>
    </div>
    
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">@ViewBag.Error</div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
