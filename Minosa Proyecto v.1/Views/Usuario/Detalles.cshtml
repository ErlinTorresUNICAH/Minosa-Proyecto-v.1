@model Minosa_Proyecto_v._1.Models.UsuarioViewModel



<form method="post" asp-action="Editar" class="container " style="max-width: 500px;">
    <h2 class="text-center">Detalles del Usuario</h2>
    <div class="form-group ">
        <label for="ID_usuario">ID de Usuario</label>
        <input type="text" class="form-control" id="ID_usuario" name="ID_usuario" value="@Model.ID_usuario" readonly />
    </div>

    <div class="form-group">
        <label for="Nombre_Usuario">Nombre de Usuario</label>
        <input type="text" class="form-control" id="Nombre_Usuario" name="Nombre_Usuario" value="@Model.Nombre_Usuario" required />
    </div>

    <div class="form-group">
        <label for="Contrasena">Contraseña</label>
        <input type="password" class="form-control" id="Contrasena" name="Contrasena" value="@Model.Contrasena" required />
    </div>

    <div class="form-group">
        <label for="Nombre_Rol">Rol</label>
        <input type="text" class="form-control" id="Nombre_Rol" name="Nombre_Rol" value="@Model.Nombre_Rol" readonly />
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción del Rol</label>
        <textarea class="form-control" id="Descripcion" name="Descripcion" readonly>@Model.Descripcion</textarea>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-success text-center">Guardar Cambios</button>
    </div>
   
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
