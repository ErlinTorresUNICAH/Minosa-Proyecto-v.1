@model CorreoSettings

<div class="text-center">
    <h2>Editar Configuración de Correo</h2>
</div>
<form asp-action="Editar" method="post" class="container" style="max-width: 500px;">
    <div class="form-group">
        <label for="SmtpServer">Servidor SMTP:</label>
        <input asp-for="SmtpServer" class="form-control" id="SmtpServer" />
        <span asp-validation-for="SmtpServer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SmtpPort">Puerto SMTP:</label>
        <input asp-for="SmtpPort" type="number" class="form-control" id="SmtpPort" />
        <span asp-validation-for="SmtpPort" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EmailFrom">Correo Electrónico:</label>
        <input asp-for="EmailFrom" type="email" class="form-control" id="EmailFrom" />
        <span asp-validation-for="EmailFrom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EmailPassword">Contraseña:</label>
        <input asp-for="EmailPassword" type="password" class="form-control" id="EmailPassword" />
        <span asp-validation-for="EmailPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary m-2">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary m-2">Cancelar</a>
</form>
