@model Zona

<h2>Crear Zona</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Nombre_Zona"></label>
        <input asp-for="Nombre_Zona" class="form-control" />
        <span asp-validation-for="Nombre_Zona" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion_Zona"></label>
        <input asp-for="Descripcion_Zona" class="form-control" />
        <span asp-validation-for="Descripcion_Zona" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-folder-plus"></i> Crear</button>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-triangle-exclamation"></i> Cancelar</a>
</form>
