@model IEnumerable<Zona>
<div class="text-center">
    <h1 class="text-center">Lista de Zonas</h1>
    <button id="exportButton" class="btn btn-success m-2">
        <img src="~/icons/file-excel-regular.svg" style="width: 16px; height: 16px;"> Exportar a Excel
    </button>
</div>

<a asp-action="Crear" class="btn btn-success m-2">Nueva Zona</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary m-2">Cancelar</a>

<table class="table table-bordered" id="zonasTable">
    <thead class="table-dark">
        <tr>
            <th>Nombre de la Zona</th>
            <th>Descripción</th>
            <th>Activa</th>
            <th>Creación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var zona in Model)
        {
            <tr>
                <td>@zona.Nombre_Zona</td>
                <td>@zona.Descripcion_Zona</td>
                <td data-activo="@zona.Activo">
                    @if (zona.Activo)
                    {
                        <span class="text-success"><img src="~/icons/check-solid.svg" style="width: 16px; height: 16px;"></span>
                    }
                    else
                    {
                        <span class="text-danger"><img src="~/icons/ban-solid.svg" style="width: 16px; height: 16px;"></span>
                    }
                </td>
                <td>@zona.Creacion_Zona.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@zona.ID_zona" class="btn btn-warning btn-sm">
                        <img src="~/icons/pencil-square.svg" style="width: 16px; height: 16px;">
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@zona.ID_zona" class="btn btn-danger btn-sm">
                        <img src="~/icons/trash-can-regular.svg" style="width: 16px; height: 16px;">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* script para exportar a excel *@
<script>
    document.getElementById('exportButton').addEventListener('click', function () {
        // Clonar la tabla para evitar modificar el DOM original
        let table = document.getElementById('zonasTable').cloneNode(true);

        // Reemplazar los iconos de "Activo" por valores de texto
        let rows = table.querySelectorAll('tbody tr');
        rows.forEach(row => {
            let activoCell = row.querySelector('td[data-activo]');
            if (activoCell) {
                let activoValue = activoCell.getAttribute('data-activo') === "True" ? "Sí" : "No";
                activoCell.textContent = activoValue;
            }
        });

        // Convertir la tabla clonada a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Zonas" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Zonas.xlsx");
    });
</script>
