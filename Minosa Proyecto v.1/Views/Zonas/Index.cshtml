@model IEnumerable<Zona>
<div class="text-center">
    <h1 class="text-center">Lista de Zonas</h1>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>

<a asp-action="Crear" class="btn btn-outline-success"><i class="bi bi-cloud-plus"></i> Nueva Zona</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-outline-secondary">Cancelar</a>

<table class="table" id="zonasTable">
    <thead>
        <tr>
            <th>Nombre de la Zona</th>
            <th>Descripción</th>
            <th>Activa</th>
            <th>Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var zona in Model)
        {
            <tr>
                <td>@zona.Nombre_Zona</td>
                <td>@zona.Descripcion_Zona</td>
                <td data-activo="@zona.Activo">
                    @if (zona.Activo)
                    {
                        <span class="text-success"><i class="bi bi-check-circle-fill"></i></span>
                    }
                    else
                    {
                        <span class="text-danger"><i class="bi bi-x-circle-fill"></i></span>
                    }
                </td>
                <td>@zona.Creacion_Zona.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@zona.ID_zona" class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i> Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@zona.ID_zona" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Eliminar</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script>
    document.getElementById('exportButton').addEventListener('click', function () {
        // Clonar la tabla para evitar modificar el DOM original
        let table = document.getElementById('zonasTable').cloneNode(true);

        // Reemplazar los iconos de "Activo" por valores de texto
        let rows = table.querySelectorAll('tbody tr');
        rows.forEach(row => {
            let activoCell = row.querySelector('td[data-activo]');
            if (activoCell) {
                let activoValue = activoCell.getAttribute('data-activo') === "True" ? "Sí" : "No";
                activoCell.textContent = activoValue;
            }
        });

        // Convertir la tabla clonada a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Zonas" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Zonas.xlsx");
    });
</script>
