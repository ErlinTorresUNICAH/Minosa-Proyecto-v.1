@model Zona

<div class="container p-3 mb-5" style="width: 400px;">
    <h2 class="text-center">Editar Zona</h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="ID_zona" />

        <div class="form-group">
            <label asp-for="Nombre_Zona"></label>
            <input asp-for="Nombre_Zona" class="form-control" />
            <span asp-validation-for="Nombre_Zona" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion_Zona"></label>
            <input asp-for="Descripcion_Zona" class="form-control" />
            <span asp-validation-for="Descripcion_Zona" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="Activo" class="form-check-input" type="checkbox" />
            <label asp-for="Activo" class="form-check-label"></label>
            <span asp-validation-for="Activo" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary m-2">
                <i class="fa-solid fa-check-to-slot"></i> Guardar Cambios
            </button>
            <a asp-action="Index" class="btn btn-secondary m-2">
                <i class="fa-solid fa-triangle-exclamation"></i> Cancelar
            </a>
        </div>
    </form>
</div>
