@model Zona

<h2>Editar Zona</h2>

<form asp-action="Editar" method="post">
    <!-- Campo oculto para el ID de la zona -->
    <input type="hidden" asp-for="ID_zona" />

    <div class="form-group">
        <label>Nombre Zona</label>
        <input asp-for="Nombre_Zona" class="form-control" />
        <span asp-validation-for="Nombre_Zona" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label >Descripcion de Zona</label>
        <input asp-for="Descripcion_Zona" class="form-control" />
        <span asp-validation-for="Descripcion_Zona" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Activo" class="form-check-input" type="checkbox" />
        <label asp-for="Activo" class="form-check-label"></label>
        <span asp-validation-for="Activo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-check-to-slot"></i> Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-triangle-exclamation"></i> Cancelar</a>
</form>
