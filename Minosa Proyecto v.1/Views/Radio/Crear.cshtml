@model Minosa_Proyecto_v._1.Models.Radio


<h2>Agregar Nuevo Radio</h2>
<form asp-action="Crear" method="post">
    <h3>Datos Básicos del Equipo</h3>

    <div class="form-group">
        <label for="ID_tipo_equipo">Tipo de Equipo</label>
        <select asp-for="ID_tipo_equipo" asp-items="Model.TiposEquipos" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="ID_proveedor">Proveedor</label>
        <select asp-for="ID_proveedor" asp-items="Model.Proveedores" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="ID_modelo">Modelo</label>
        <select asp-for="ID_modelo" asp-items="Model.Modelos" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="ID_area">Área</label>
        <select asp-for="ID_area" asp-items="Model.Areas" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="ID_ip">Dirección IP</label>
        <select asp-for="ID_ip" asp-items="Model.IPs" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="NumeroSerie">Número de Serie</label>
        <input type="text" asp-for="NumeroSerie" class="form-control" value='2323' />
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <input type="text" asp-for="Descripcion" class="form-control" value='e' />
    </div>

    <div class="form-group">
        <label for="Estado">Estado</label>
        <input type="text" asp-for="Estado" class="form-control" value="activo" />
    </div>

    <div class="form-group">
        <label for="Activo">Activo</label>
        <input type="checkbox" asp-for="Activo" class="form-check-input" />
    </div>

    <div class="form-group">
        <label for="Respaldo">Respaldo</label>
        <textarea asp-for="Respaldo" class="form-control"  ></textarea>
    </div>

    <div class="form-group">
        <label for="Observaciones">Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control"   ></textarea>
    </div>

    <h3>Detalles Técnicos</h3>

    <div class="form-group">
        <label for="Tipo_Voltaje">Tipo de Voltaje</label>
        <input type="text" asp-for="Tipo_Voltaje" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Voltaje">Voltaje</label>
        <input type="number" asp-for="Voltaje" class="form-control" value=3/>
    </div>

    <div class="form-group">
        <label for="Amperaje">Amperaje</label>
        <input type="number" asp-for="Amperaje" class="form-control" value=3/>
    </div>

    <div class="form-group">
        <label for="Num_Puertos_RJ45">Número de Puertos RJ45</label>
        <input type="number" asp-for="Num_Puertos_RJ45" class="form-control" value=3/>
    </div>

    <div class="form-group">
        <label for="Num_Puertos_SFP">Número de Puertos SFP</label>
        <input type="number" asp-for="Num_Puertos_SFP" class="form-control" value=3/>
    </div>

    <div class="form-group">
        <label for="Fecha_Compra">Fecha de Compra</label>
        @{  
           var today = DateTime.Today.ToString("yyyy-MM-dd");  
        } 
        <input type="date" asp-for="Fecha_Compra" class="form-control" value="@today"/>
    </div>

    <div class="form-group">
        <label for="Fecha_Garantia">Fecha de Garantía</label>
        @{  
           var today2 = DateTime.Today.ToString("yyyy-MM-dd");  
        }  

        <input type="date" asp-for="Fecha_Garantia" class="form-control" value="@today2" />
    </div>

    <div class="form-group">
        <label for="Tipo_Garantia">Tipo de Garantía</label>
        <input type="text" asp-for="Tipo_Garantia" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Canal">Canal</label>
        <input type="text" asp-for="Canal" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Firmware">Firmware</label>
        <input type="text" asp-for="Firmware" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Usuario">Usuario</label>
        <input type="text" asp-for="Usuario" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Contracena">Contraseña</label>
        <input type="text" asp-for="Contracena" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="MAC_Address">MAC Address</label>
        <input type="text" asp-for="MAC_Address" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Fecha_Instalacion">Fecha de Instalación</label>
        <input type="text" asp-for="Fecha_Instalacion" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Ultima_Actualizacion">Última Actualización</label>
        <input type="text" asp-for="Ultima_Actualizacion" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Voltaje_Energia">Voltaje de Energía</label>
        <input type="text" asp-for="Voltaje_Energia" class="form-control" value='e'/>
    </div>

    <h3>Parámetros de Radio</h3>

    <div class="form-group">
        <label for="Frecuencia">Frecuencia</label>
        <input type="text" asp-for="Frecuencia" class="form-control" value='e' />
    </div>

    <div class="form-group">
        <label for="Frecuencia_Rango">Frecuencia Rango</label>
        <input type="text" asp-for="Frecuencia_Rango" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Modo">Modo</label>
        <input type="text" asp-for="Modo" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Ssid">SSID</label>
        <input type="text" asp-for="Ssid" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Modulacion">Modulación</label>
        <input type="text" asp-for="Modulacion" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Potencia">Potencia</label>
        <input type="text" asp-for="Potencia" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Tx_Power">Tx Power</label>
        <input type="text" asp-for="Tx_Power" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Rx_Level">Rx Level</label>
        <input type="text" asp-for="Rx_Level" class="form-control" value='e'/>
    </div>

    <div class="form-group">
        <label for="Tx_Freq">Tx Freq</label>
        <input type="text" asp-for="Tx_Freq" class="form-control" value='e'/>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>

@if (ViewBag.Error != null)
{
        <div class="alert alert-danger">@ViewBag.Error</div>
}