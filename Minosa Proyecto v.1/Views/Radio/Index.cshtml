@model List<Minosa_Proyecto_v._1.Models.Radio>

<div class="text-center">
    <h1 class="text-center">Lista de Radios</h1>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>
<div class="col-md-3 col-12 mb-2">
</div>
<a asp-controller="Radio" asp-action="Crear" class="btn btn-secondary"><i class="fa-solid fa-tower-cell"></i> Agregar Radio</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-outline-danger"><i class="fa-solid fa-triangle-exclamation"></i> Cancelar</a>


<table class="table" id="radiosTable">
    <thead>
        <tr>
            <th>ID Equipo</th>
            <th>Número de Serie</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Frecuencia</th>
            <th>Modulación</th>
            <th>Potencia</th>
            <th>Tx Power</th>
            <th>Rx Level</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var radio in Model)
        {
                <tr>
                    <td>@radio.ID_equipo</td>
                    <td>@radio.NumeroSerie</td>
                    <td>@radio.Descripcion</td>
                    <td>@radio.Estado</td>
                    <td>@radio.Frecuencia</td>
                    <td>@radio.Modulacion</td>
                    <td>@radio.Potencia</td>
                    <td>@radio.Tx_Power</td>
                    <td>@radio.Rx_Level</td>
                <td>
                    <a href="@Url.Action("Detalles", "Radio", new { id = radio.ID_equipo })" class="btn btn-info btn-sm">Ver Detalles</a>
                </td>
                </tr>
        }
    </tbody>

</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script>
        document.getElementById('exportButton').addEventListener('click', function () {
        // Obtener la tabla HTML
        let table = document.getElementById('radiosTable');

        // Convertir tabla HTML a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Radios" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Radios.xlsx");
    });

</script>
