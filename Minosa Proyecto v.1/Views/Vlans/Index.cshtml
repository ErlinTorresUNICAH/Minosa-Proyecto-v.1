@model IEnumerable<Vlan>


<div class="text-center">
    <h2>Lista de VLANs</h2>
    <button id="exportButton" class="btn btn-success m-2">
        <i class="fas fa-file-excel"></i> Exportar a Excel
    </button>
</div>
<a asp-action="Crear" class="btn btn-primary">Crear Nueva VLAN</a>
<a asp-action="Index" asp-controller="Equipos" class="btn btn-outline-danger"><i class="fa-solid fa-triangle-exclamation"></i> Cancelar</a>

<table class="table" id="vlansTable">
    <thead>
        <tr>
            <th>Nombre de la VLAN</th>
            <th>SubNet</th>
            <th>Gateway</th>
            <th>Dhcp Inicio</th>
            <th>Dhcp Fin</th>
            <th>Observaciones</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vlan in Model)
        {
            <tr >
                <td>@vlan.Nombre_Vlan</td>
                <td>@vlan.SubNet</td>
                <td>@vlan.Gateway</td>
                <td>@vlan.DhcpIni</td>
                <td>@vlan.DhcpFin</td>
                <td>@vlan.Observaciones</td>
                <td data-ping="@vlan.Activo">
                    @if (vlan.Activo)
                    {
                        <span class="text-success"><i class="bi bi-check-circle-fill"></i></span>
                    }
                    else
                    {
                        <span class="text-danger"><i class="bi bi-x-circle-fill"></i></span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@vlan.ID_vlan" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@vlan.ID_vlan" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script>
            document.getElementById('exportButton').addEventListener('click', function () {
        // Clonar la tabla para evitar modificar el DOM original
        let table = document.getElementById('vlansTable').cloneNode(true);

        // Reemplazar los iconos de ping por valores de texto
        let rows = table.querySelectorAll('tbody tr');
        rows.forEach(row => {
            let pingCell = row.querySelector('td[data-ping]');
            if (pingCell) {
                let pingValue = pingCell.getAttribute('data-ping') === "True" ? "Activa" : "Inactiva";
                pingCell.textContent = pingValue;
            }
        });

        // Convertir la tabla clonada a una hoja de cálculo
        let workbook = XLSX.utils.table_to_book(table, { sheet: "Vlans" });

        // Exportar el archivo
        XLSX.writeFile(workbook, "Vlans.xlsx");

    });

</script>

