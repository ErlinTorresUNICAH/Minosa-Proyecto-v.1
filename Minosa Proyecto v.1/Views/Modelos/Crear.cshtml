@model Modelo

<div class="container p-3 mb-5" style="width: 400px;">
    <h2 class="text-center">Crear Modelo</h2>

    <form asp-action="Crear" method="post">
        <div class="form-group">
            <label asp-for="Nombre_Modelo"></label>
            <input asp-for="Nombre_Modelo" class="form-control" />
            <span asp-validation-for="Nombre_Modelo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="id_Marca">Marca</label>
            <select asp-for="id_Marca" class="form-control" asp-items="ViewBag.Marcas"></select>
            <span asp-validation-for="id_Marca" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary m-2">Crear</button>
            <a asp-action="Index" class="btn btn-secondary m-2">Cancelar</a>
        </div>
    </form>
</div>
