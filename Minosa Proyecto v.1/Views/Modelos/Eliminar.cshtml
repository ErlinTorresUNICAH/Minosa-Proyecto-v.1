@model Modelo

<h2>Eliminar Modelo</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="Eliminar" method="post">
    <!-- Campo oculto para el ID del modelo -->
    <input type="hidden" asp-for="ID_modelo" />

    <div class="form-group">
        <label>Nombre del Modelo:</label>
        <input asp-for="Nombre_Modelo" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Marca:</label>
        <input asp-for="Marca" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
