<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]NetGuardião</title>

    @* BOOTSTRAP *@
    <link href="/lib/bootstrap-5.3.3-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet"/>

    @* Exportacion de XLS *@
    <script src="~/js/xlsx/xlsx.full.min.js"></script>

    @* HightChart *@
    @* <script src="~/js/highcharts/highcharts.js"></script>   *@
    <script src="~/js/highcharts/exporting.js"></script> 
    <script src="~/js/highcharts/export-data.js"></script> 
    <script src="~/js/highcharts/offline-exporting.js"></script>

    <script src="~/js/highcharts/maps/highmaps.js"></script>
    <script src="~/js/highcharts/maps/exporting.js"></script>
    <script src="~/js/highcharts/maps/accessibility.js"></script>
    <script src="~/js/highcharts/maps/offline-exporting.js"></script>
</head>
<body>
    <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" asp-controller="Home" asp-action="Index">NetGuardião</a>
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link active custom-link" asp-controller="Home" asp-action="Index">
                    <img src="~/icons/house-solid.svg" style="width: 16px; height: 16px;"> Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link custom-link" asp-controller="Equipos" asp-action="Index">
                    <img src="~/icons/box-solid.svg" style="width: 16px; height: 16px;"> Administracion
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link custom-link" asp-controller="Actividad" asp-action="IndexGraficos">
                    <img src="~/icons/wave-square-solid.svg" style="width: 16px; height: 16px;"> Actividad
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link custom-link" asp-controller="Usuario" asp-action="Detalles" asp-route-id="1">
                    <img src="~/icons/user-gear-solid.svg" style="width: 16px; height: 16px;"> Perfil
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link custom-link" asp-controller="Graficos" asp-action="Index">
                    <img src="~/icons/chart-pie-solid.svg" style="width: 16px; height: 16px;"> Reportes
                </a>
            </li>
            @if (User.IsInRole("Admin")){
                <li class="nav-item">
                    <a class="nav-link custom-link" asp-controller="Usuarios" asp-action="Index">
                        <img src="~/icons/lock-open-solid.svg" style="width: 16px; height: 16px;"> Roles y Usuario
                    </a>
                </li>
            }
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link custom-link" asp-controller="Destinatarios" asp-action="Index">
                        <img src="~/icons/envelope-circle-check-solid.svg" style="width: 16px; height: 16px;"> Destinatarios
                    </a>
                </li>
            }
        </ul>
        <ul class="navbar-nav px-3">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item text-nowrap">
                    <a class="nav-link" asp-controller="Usuario" asp-action="Detalles" asp-route-id="1">Bienvenido, @User.Identity.Name</a>
                </li>
                
                <li class="nav-item text-nowrap">
                    <form method="post" asp-controller="Login" asp-action="Logout" class="form-inline">
                        <button type="submit" class="btn btn-outline-light">
                            <img src="~/icons/diamond-turn-right-solid.svg" style="width: 16px; height: 16px;"> Cerrar sesión
                        </button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item text-nowrap">
                    <a class="btn btn-primary nav-link" asp-controller="Login" asp-action="Index">Iniciar sesión</a>
                </li>
            }
        </ul>
    </nav>
    <div class="content-wrapper">
        <main role="main" class="container-fluid main-content">
            @RenderBody()
        </main>
    </div>

    @* BOOTSTRAP *@
    <script src="~/lib/bootstrap-5.3.3-dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>

    @* Quey y js *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
