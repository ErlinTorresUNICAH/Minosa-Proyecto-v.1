@model List<Minosa_Proyecto_v._1.Models.EquipoViewModel>


<!-- Botones ajustados para que no ocupen espacio innecesario -->
<div class="row mt-3">
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="EquiposDetalles" asp-action="Crear" class="btn btn-primary btn-block"><i class="fa-solid fa-folder-plus"></i> Nuevo Equipo</a>

    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Proveedores" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-truck-fast"></i> Proveedores</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="TipoEquipos" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-computer"></i> Tipos de Equipo</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="DireccionesIp" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-qrcode"></i> Direcciones IP</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Modelos" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-regular fa-clone"></i> Modelos</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Marcas" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-tags"></i> Marcas</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Areas" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-regular fa-building"></i> Áreas</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Zonas" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-mountain-city"></i> Zonas</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Materiales" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-hammer"></i> Materiales</a>
    </div>

    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Vlans" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-wifi"></i> VLANs</a>
    </div>
    <div class="col-md-3 col-12 mb-2">
        <a asp-controller="Radio" asp-action="Index" class="btn btn-secondary btn-block"><i class="fa-solid fa-tower-cell"></i> Radios</a>
    </div>
</div>


<h2>Lista de Equipos</h2>

<!-- Table with filters for each column -->
<div class="table-responsive">
    <table class="table table-striped table-bordered" style="table-layout: auto; width: 100%;" id="equiposTable">
        <thead>
            <tr>
                <!-- Search inputs for each column -->
                <th><input type="text" id="serialFilter" placeholder="Buscar Nº Serie" class="form-control" /></th>
                <th><input type="text" id="descripcionFilter" placeholder="Buscar Descripción" class="form-control" /></th>
                <th><input type="text" id="tipoEquipoFilter" placeholder="Buscar Tipo de Equipo" class="form-control" /></th>
                <th><input type="text" id="modeloFilter" placeholder="Buscar Modelo" class="form-control" /></th>
                <th><input type="text" id="areaFilter" placeholder="Buscar Área" class="form-control" /></th>
                <th><input type="text" id="direccionIpFilter" placeholder="Buscar Dirección IP" class="form-control" /></th>
                <th><input type="text" id="estadoFilter" placeholder="Buscar Estado" class="form-control" /></th>
                <th><input type="text" id="activoFilter" placeholder="Buscar Activo" class="form-control" /></th>
                <th><input type="text" id="respaldoFilter" placeholder="Buscar Respaldo" class="form-control" /></th>
                <th><input type="text" id="observacionesFilter" placeholder="Buscar Observaciones" class="form-control" /></th>
                <th>
                    <div>
                        <!-- Button to clear filters -->
                        <button id="clearFiltersButton" class="btn btn-secondary">
                            <i class="fas fa-times-circle"></i> Borrar Filtros
                        </button>
                    </div>
                </th>
                

            </tr>
            <tr>
                <th>Número de Serie</th>
                <th>Descripción</th>
                <th>Tipo de Equipo</th>
                <th>Modelo</th>
                <th>Área</th>
                <th>Dirección IP</th>
                <th>Estado</th>
                <th>Activo</th>
                <th>Respaldo</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipo in Model)
            {
                <tr>
                    <td>@equipo.NumeroSerie</td>
                    <td>@equipo.Descripcion</td>
                    <td>@equipo.Tipo_Equipo</td>
                    <td>@equipo.Modelo</td>
                    <td>@equipo.Area</td>
                    <td>@equipo.Direccion_IP</td>
                    <td>@equipo.Estado</td>
                    <td>@equipo.Activo</td>
                    <td>@equipo.Respaldo</td>
                    <td>@equipo.Observaciones</td>
                    <td>
                        <a href="@Url.Action("Detalles", "EquiposDetalles", new { id = equipo.ID_equipo })" class="btn btn-info btn-sm">Ver Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

